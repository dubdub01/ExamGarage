{% extends 'base.html.twig' %}

{% block title %}Hello VoitureController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1200px; width: 95%; font: 18px/1.5; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

   <h2>Voitures en vente</h2>
       <div class="row">
       
       
       
           {% for voiture in voitures %}
                {% set url = path('vente_show',{'id':voiture.id}) %}
                <div class="col-4">
                
                    
                <a href="{{url}}" class="card mb-4">
                    <h1 class="card-title">{{voiture.marque}}</h1>
                    <h2 class="card-subtitle text-muted ">{{voiture.modele}}</h2>
                    <h2 class="card-subtitle text-muted ">{{voiture.prix}}â‚¬</h2>
                    <h2 class="card-subtitle text-muted ">{{voiture.km}}km</h2>


                    <img src="{{voiture.cover}}" alt="cover image">
                </a>
                </div> 
           {% endfor %}
        </div>
</div>
{% endblock %}
